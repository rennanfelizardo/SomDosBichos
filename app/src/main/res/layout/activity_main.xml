<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="somdosbichos.rennanfelizardo.ufpb.br.somdosbichos.MainActivity"
    android:background="#f5e9b9">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/caoId"
        android:layout_marginTop="@dimen/images_marginTop"
        android:background="@drawable/cao"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gatoId"
        android:layout_alignTop="@+id/caoId"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:background="@drawable/gato" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leaoId"
        android:layout_below="@+id/caoId"
        android:layout_alignLeft="@+id/caoId"
        android:layout_alignBottom="@+id/macacoId"
        android:layout_marginTop="27dp"
        android:background="@drawable/leao" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/macacoId"
        android:layout_below="@id/gatoId"
        android:layout_marginTop="@dimen/images_marginTop"
        android:layout_alignLeft="@+id/gatoId"
        android:layout_alignStart="@+id/gatoId"
        android:background="@drawable/macaco" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ovelhaId"
        android:layout_marginTop="@dimen/images_marginTop"
        android:layout_alignBottom="@+id/vacaId"
        android:layout_below="@+id/macacoId"
        android:layout_alignLeft="@+id/leaoId"
        android:background="@drawable/ovelha" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vacaId"
        android:layout_marginTop="20dp"
        android:layout_below="@id/macacoId"
        android:layout_alignLeft="@+id/macacoId"
        android:layout_alignStart="@+id/macacoId"
        android:background="@drawable/vaca" />
</RelativeLayout>
